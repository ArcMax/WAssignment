<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                card_view:cardCornerRadius="@dimen/circle_padding"
                card_view:cardElevation="@dimen/circle_padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        android:src="@color/colorGreyLight"
                        android:id="@+id/coverImageView"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginBottom="8dp"
                            android:text="@string/card_title"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_title"
                            android:lines="2"
                            android:textStyle="bold"
                            android:id="@+id/titleTextView"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                        <TextView
                                android:id="@+id/gold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gold"
                                android:drawableLeft="@drawable/gold_bg_circle"
                                android:drawablePadding="@dimen/circle_padding"
                                android:textSize="@dimen/text_subhead"
                                android:padding="@dimen/circle_padding"/>
                        <TextView
                                android:id="@+id/silver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/silver_bg_circle"
                                android:drawablePadding="@dimen/circle_padding"
                                android:text="@string/silver"
                                android:textSize="@dimen/text_subhead"
                                android:padding="@dimen/circle_padding"/>
                        <TextView
                                android:id="@+id/bronze"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/bronze_bg_circle"
                                android:drawablePadding="@dimen/circle_padding"
                                android:text="@string/bronze"
                                android:textSize="@dimen/text_subhead"
                                android:padding="@dimen/circle_padding"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</RelativeLayout>